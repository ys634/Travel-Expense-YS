<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTripActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


    <EditText
        android:id="@+id/edtTxtTripName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/txtStartDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTxtBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAddTrip"
        app:layout_constraintStart_toStartOf="@+id/txtEndDate" />

    <Button
        android:id="@+id/btnAddTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="ADD TRIP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip Name"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtTxtTripName"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtStartDate"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtEndDate"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Currency"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtHomeCurrency"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <TextView
        android:id="@+id/txtStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="date"
        android:gravity="bottom"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtEndDate"
        app:layout_constraintStart_toStartOf="@+id/edtTxtTripName" />

    <TextView
        android:id="@+id/txtEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:inputType="date"
        android:gravity="bottom"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtHomeCurrency"
        app:layout_constraintStart_toStartOf="@+id/edtTxtTripName" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtTxtBudget"
        app:layout_constraintStart_toStartOf="@+id/guideline8" />

    <TextView
        android:id="@+id/txtHomeCurrency"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="32dp"
        android:gravity="bottom"
        android:text="USD"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/edtTxtBudget"
        app:layout_constraintStart_toStartOf="@+id/txtEndDate" />

    <TextView
        android:id="@+id/txtTripNameWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Trip Name Required"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="@+id/edtTxtTripName"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtTripName" />

    <TextView
        android:id="@+id/txtDateWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Start date is after the end date"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="@+id/txtStartDate"
        app:layout_constraintTop_toBottomOf="@+id/txtStartDate" />

    <include
        layout="@layout/home_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>