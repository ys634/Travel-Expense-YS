<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:backgroundTint="@color/white_to_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.yut.travelexpense.RelativeRadioGroup
                android:id="@+id/rrAllIcons"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <View
                    android:id="@+id/strut"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerHorizontal="true" />


                <RadioButton
                    android:id="@+id/radioBtn1"
                    style="@style/categories_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@id/radioBtn2"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />

                <RadioButton
                    android:id="@+id/radioBtn2"
                    style="@style/categories_button"
                    android:layout_width="92.5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/strut"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_food"
                    android:gravity="center"
                    android:text="Food" />

                <RadioButton
                    android:id="@+id/radioBtn3"
                    style="@style/categories_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/strut"
                    android:layout_margin="5dp"
                    android:layout_toStartOf="@+id/radioBtn4"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_transportation"
                    android:gravity="center"
                    android:text="Transportation" />

                <RadioButton
                    android:id="@+id/radioBtn4"
                    style="@style/categories_button"
                    android:layout_width="92.5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_transportation"
                    android:gravity="center"
                    android:text="Transportation" />

                <RadioButton
                    android:id="@+id/radioBtn5"
                    style="@style/categories_button"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioBtn1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@id/radioBtn6"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />


                <RadioButton
                    android:id="@+id/radioBtn6"
                    style="@style/categories_button"
                    android:layout_width="92.5dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/radioBtn2"
                    android:layout_alignEnd="@id/strut"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />

                <RadioButton
                    android:id="@+id/radioBtn7"
                    style="@style/categories_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/radioBtn3"
                    android:layout_alignStart="@id/strut"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_toStartOf="@id/radioBtn8"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />

                <RadioButton
                    android:id="@+id/radioBtn8"
                    style="@style/categories_button"
                    android:layout_width="92.5dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/radioBtn4"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />

                <RadioButton
                    android:id="@+id/radioBtn9"
                    style="@style/categories_button"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radioBtn5"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toStartOf="@id/radioBtn10"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />


                <RadioButton
                    android:id="@+id/radioBtn10"
                    style="@style/categories_button"
                    android:layout_width="92.5dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/radioBtn6"
                    android:layout_alignEnd="@id/strut"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />

                <RadioButton
                    android:id="@+id/radioBtn11"
                    style="@style/categories_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/radioBtn7"
                    android:layout_alignStart="@id/strut"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_toStartOf="@id/radioBtn12"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />

                <RadioButton
                    android:id="@+id/radioBtn12"
                    style="@style/categories_button"
                    android:layout_width="92.5dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/radioBtn8"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/radiobutton_background"
                    android:drawableTop="@drawable/ic_accommodation"
                    android:gravity="center"
                    android:text="Accommodation" />


            </com.yut.travelexpense.RelativeRadioGroup>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

